<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Marcelo Pesantez"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtDetalleNombre" android:textSize="34sp"
                android:textColor="@color/purple_700"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@android:drawable/btn_radio"
                    android:id="@+id/imageView4" android:layout_weight="0"
                    android:foreground="@android:drawable/alert_dark_frame"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtDetalleID" android:layout_weight="1"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@android:drawable/btn_radio"
                    android:id="@+id/imageView5" android:layout_weight="0"
                    android:background="@android:drawable/btn_radio" android:backgroundTint="@color/purple_200"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtDetalleEC" android:layout_weight="1"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@android:drawable/btn_radio"
                    android:id="@+id/imageView6" android:layout_weight="0"
                    android:background="@android:drawable/btn_radio"
                    android:backgroundTint="@color/design_default_color_error"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtDetalleTS" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>